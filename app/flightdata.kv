#:kivy 2.0.0

# Set the Initial Screen
HomeScreen:

<HomeScreen>:
    canvas:
        Color:
            rgba: 0.898, 0.898, 0.898, 1
        Rectangle:
            size: self.size
            pos: self.pos
    rows: 2

    GridLayout:
        cols: 3

        VersionLabel:

        OsuLogo:

        AnchorLayout:
            padding: [0, 40, 40, 0]
            anchor_y: 'top'
            anchor_x: 'right'

            SettingsButton:

    GridLayout:
        cols: 2

        BoxLayout:
            orientation: 'vertical'

            DataTransferLabel:
                size_hint_y: 0.4
                text_size: self.size
                valign: 'bottom'
                halign: 'center'
                text: 'SD Card'

            AnchorLayout:
                anchor_x: 'center'
                anchor_y: 'top'
                DataTransferButton:
                    id: upload_button
                    text: 'Upload'
                    on_release: self.upload_data()

        BoxLayout:
            orientation: 'vertical'

            DataTransferLabel:
                size_hint_y: 0.4
                text_size: self.size
                valign: 'bottom'
                halign: 'center'
                text: 'USB Drive'

            AnchorLayout:
                anchor_x: 'center'
                anchor_y: 'top'
                DataTransferButton:
                    id: download_button
                    text: 'Download'
                    on_release: self.download_data()


<DataTransferButton>:
    background_normal: 'static/images-kivy/dark_button.png'
    background_down: 'static/images-kivy/light_button.png'
    text: 'undefined'
    font_size: 56
    size_hint: None, None
    size: dp(300), dp(150)

<DataTransferLabel>:
    text: 'undefined'
    font_size: 48
    color: 0.22, 0.22, 0.22, 1

<SettingsButton>:
    size_hint: None, None
    size: dp(50), dp(50)
    background_normal: 'static/images-kivy/settings_dark_48dp.png'
    background_down: 'static/images-kivy/settings_light_48dp.png'
    on_release: print('Settings Pressed')
    on_release: app.open_settings()

<OsuLogo>:
    source: 'static/images-kivy/osu_logo.png'
    allow_stretch: True
    size_hint: None, None
    size: dp(410), dp(213)

<VersionLabel>:
    font_size: 28
    color: 0.22, 0.22, 0.22, 1
    text_size: self.size
    halign: 'left'
    valign: 'top'
