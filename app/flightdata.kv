#:kivy 2.0.0

# Set the Initial Screen
HomeScreen:

<HomeScreen>:
    canvas:
        Color:
            rgba: 0.898, 0.898, 0.898, 1
        Rectangle:
            size: self.size
            pos: self.pos
    rows: 2

    GridLayout:
        cols: 3

        BoxLayout:
            orientation: 'vertical'
            VersionLabel:
                size_hint_y: 0.2
            StorageLabel:

        OsuLogo:

        Label:


    GridLayout:
        cols: 2

        BoxLayout:
            orientation: 'vertical'

            DataTransferLabel:
                size_hint_y: 0.4
                text_size: self.size
                valign: 'bottom'
                halign: 'center'
                text: 'SD Card'

            AnchorLayout:
                anchor_x: 'center'
                anchor_y: 'top'
                DataTransferButton:
                    id: upload_button
                    text: 'Upload'
                    disabled: True
                    on_release: self.upload_data()

        BoxLayout:
            orientation: 'vertical'

            DataTransferLabel:
                size_hint_y: 0.4
                text_size: self.size
                valign: 'bottom'
                halign: 'center'
                text: 'USB Drive'

            AnchorLayout:
                anchor_x: 'center'
                anchor_y: 'top'
                DataTransferButton:
                    id: download_button
                    text: 'Download'
                    disabled: True
                    on_release: self.download_data()

<UploadPopup>:
    auto_dismiss: False
    size_hint: None, None
    size: (400, 400)

    GridLayout:
        rows: 2
        cols: 1

        Label:
            text: "Upload Complete"

        GridLayout
            cols: 2

            Button:
                text: "Close"
                on_release: root.call_dismiss()

            Button:
                id: copy_button
                text:"Copy"
                disabled: True
                on_release: root.copy_data()
                on_release: root.call_dismiss()

<DownloadPopup>:



<DataTransferButton>:
    background_normal: 'static/images-kivy/dark_button.png'
    background_down: 'static/images-kivy/light_button.png'
    text: 'undefined'
    font_size: 56
    size_hint: None, None
    size: dp(300), dp(150)

<DataTransferLabel>:
    text: 'undefined'
    font_size: 48
    color: 0.22, 0.22, 0.22, 1

<OsuLogo>:
    source: 'static/images-kivy/osu_logo.png'
    allow_stretch: True
    size_hint: None, None
    size: dp(410), dp(213)

<VersionLabel>:
    font_size: 20
    color: 0.22, 0.22, 0.22, 1
    text_size: self.size
    halign: 'left'
    valign: 'top'

<StorageLabel>:
    font_size: 20
    color: 0.22, 0.22, 0.22, 1
    text_size: self.size
    halign: 'left'
    valign: 'top'


